<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team10.GUI.CreateProfileController">
   <children>
      <Pane layoutX="455.0" layoutY="115.0" prefHeight="355.0" prefWidth="370.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="nameEntry" layoutX="10.0" layoutY="40.0" prefHeight="25.0" prefWidth="350.0" promptText="Enter User Name" />
            <Label fx:id="nameErrorLabel" layoutX="10.0" layoutY="70.0" prefHeight="25.0" prefWidth="350.0" text="Please enter a valid name" textFill="#f80606" visible="false" />
            <Label layoutX="10.0" layoutY="100.0" prefHeight="25.0" text="Date of birth:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="dayEntry" layoutX="100.0" layoutY="100.0" prefHeight="25.0" prefWidth="80.0" promptText="Day" />
            <ComboBox fx:id="monthEntry" layoutX="190.0" layoutY="100.0" prefHeight="25.0" prefWidth="80.0" promptText="Month" />
            <ComboBox fx:id="yearEntry" layoutX="280.0" layoutY="100.0" prefHeight="25.0" prefWidth="80.0" promptText="Year" />
            <Label fx:id="dateErrorLabel" layoutX="10.0" layoutY="130.0" prefHeight="25.0" prefWidth="350.0" text="Please enter all fields for date of birth" textFill="#f20808" visible="false">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <TextField fx:id="weightEntry" layoutX="10.0" layoutY="160.0" prefWidth="170.0" promptText="Enter Weight (kg)" />
            <TextField fx:id="heightEntry" layoutX="190.0" layoutY="160.0" prefWidth="170.0" promptText="Enter Height (cm)" />
            <Label fx:id="weightErrorLabel" layoutX="10.0" layoutY="190.0" prefHeight="25.0" text="Weight must be between 30 and 180" textFill="#eb0a0a" visible="false" />
            <Label fx:id="heightErrorLabel" layoutX="190.0" layoutY="190.0" prefHeight="25.0" text="Height must be between 50-260" textFill="#e40606" visible="false" />
            <Label layoutX="10.0" layoutY="220.0" text="Select gender:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <RadioButton fx:id="maleRad" layoutX="110.0" layoutY="220.0" mnemonicParsing="false" text="Male">
               <font>
                  <Font size="14.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="femaleRad" layoutX="175.0" layoutY="220.0" mnemonicParsing="false" text="Female">
               <font>
                  <Font size="14.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="notSpecifiedRad" layoutX="250.0" layoutY="220.0" mnemonicParsing="false" text="Not Specified">
               <font>
                  <Font size="14.0" />
               </font>
            </RadioButton>
            <Label fx:id="genderWarning" layoutX="10.0" layoutY="250.0" prefHeight="25.0" prefWidth="350.0" text="Please select a gender option." textFill="#eb0505" visible="false" />
            <Button fx:id="backButton" layoutX="10.0" layoutY="280.0" mnemonicParsing="false" onAction="#back" prefHeight="65.0" prefWidth="170.0" text="Back" />
            <Button fx:id="createProfileButton" layoutX="190.0" layoutY="280.0" mnemonicParsing="false" onAction="#createProfile" prefHeight="65.0" prefWidth="170.0" text="Create Profile" />
            <Label layoutX="130.0" layoutY="10.0" text="Create Profile">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</Pane>
