<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.151" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team10.Visual.CreateProfileController">
   <children>
      <HBox alignment="CENTER" fillHeight="false" layoutX="8.0" layoutY="8.0" prefHeight="720.0" prefWidth="1280.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label>
               <graphic>
                  <ImageView fitHeight="393.0" fitWidth="361.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/coachPotato.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <VBox fx:id="wholeProfileVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="490.0" spacing="5.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="470.0">
                     <children>
                        <Label text="Create Profile">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <TextField fx:id="nameEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="470.0" promptText="Enter User Name" />
                  <Label fx:id="nameErrorLabel" prefHeight="25.0" prefWidth="470.0" text="Please enter a valid user name between 1 - 15 characters" textFill="#f80606" visible="false" />
                  <HBox prefHeight="25.0" prefWidth="470.0" spacing="38.0">
                     <children>
                        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" text="Date of birth:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="dayEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="80.0" promptText="Day" />
                        <ComboBox fx:id="monthEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="90.0" promptText="Month" />
                        <ComboBox fx:id="yearEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="90.0" promptText="Year" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="dateErrorLabel" prefHeight="25.0" prefWidth="470.0" text="Please enter all fields for date of birth" textFill="#f20808" visible="false" />
                  <HBox prefHeight="25.0" prefWidth="470.0" spacing="10.0">
                     <children>
                        <TextField fx:id="weightEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="230.0" promptText="Enter Weight (kg)" />
                        <TextField fx:id="heightEntry" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="230.0" promptText="Enter Height (cm)" />
                     </children>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="470.0" spacing="10.0">
                     <children>
                        <Label fx:id="weightErrorLabel" prefHeight="25.0" prefWidth="230.0" text="Weight must be between 30 - 180" textFill="#eb0a0a" visible="false" />
                        <Label fx:id="heightErrorLabel" prefHeight="25.0" prefWidth="230.0" text="Height must be between 50 - 260" textFill="#e40606" visible="false" />
                     </children>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="470.0" spacing="54.0">
                     <children>
                        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Select gender:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="maleRad" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Male">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="femaleRad" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Female">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="notSpecifiedRad" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Other">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </HBox>
                  <Label fx:id="genderErrorLabel" prefHeight="25.0" prefWidth="470.0" text="Please select a gender option." textFill="#eb0505" visible="false" />
                  <HBox prefHeight="65.0" prefWidth="470.0" spacing="10.0">
                     <children>
                        <Button fx:id="backButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#back" prefHeight="65.0" prefWidth="230.0" text="Back" />
                        <Button fx:id="createProfileButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#createProfile" prefHeight="65.0" prefWidth="230.0" text="Create Profile" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Label prefHeight="413.0" prefWidth="381.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <graphic>
                  <ImageView fitHeight="393.0" fitWidth="361.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/coachPotato.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
         </children>
      </HBox>
   </children>
</Pane>
